---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Engineering Blog" description="Technical blog posts and articles">
  <h1>Engineering Blog</h1>

  <p>
    Thoughts on software engineering, technical deep-dives, and things I've learned
    along the way.
  </p>

  <hr>

  {posts.length === 0 ? (
    <p><em>No blog posts yet. Check back soon!</em></p>
  ) : (
    posts.map((post) => (
      <div class="blog-post">
        <h2><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
        <p class="meta">{post.data.date.toLocaleDateString()}</p>
        {post.data.description && <p>{post.data.description}</p>}
      </div>
    ))
  )}
</BaseLayout>
